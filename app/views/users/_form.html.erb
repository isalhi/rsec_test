

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, :class => "field_title" %>
    <%= f.text_field :name, :class => "blank" %>
  </div>
  <div class="field">
    <%= f.label :email, :class => "field_title" %>
    <%= f.text_field :email, :class => "blank" %>
  </div>
  <div class="field">
    <%= f.label :password, :class => "field_title" %>
    <%= f.password_field :password, :class => "blank" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confimation", :class => "field_title" %>
    <%= f.password_field :password_confirmation, :class => "blank" %>
  </div>
  <div class="actions">
    <%= f.submit "Ready" %>
  </div>
<% end %>
